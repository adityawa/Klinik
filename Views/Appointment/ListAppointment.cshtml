@model Klinik.Entities.AppointmentEntities.AppointmentModel

@{
    ViewBag.Title = "ListAppointment";
}

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
        </div>
        <h5 class="panel-title">@Klinik.Resources.UIMessages.ListOfAppointment</h5>
    </header>
    <div class="panel-body">
        <div style="width:100%; margin:0 auto">
            <table id="tbAppointment" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Klinik.Resources.UIMessages.ID</th>
                        <th>@Klinik.Resources.UIMessages.Name</th>
                        <th>@Klinik.Resources.UIMessages.Poli</th>
                        <th>@Klinik.Resources.UIMessages.Clinic</th>
                        <th>@Klinik.Resources.UIMessages.Doctor</th>
                        <th>@Klinik.Resources.UIMessages.Date</th>
                        <th>@Klinik.Resources.UIMessages.Jam</th>
                        <th>@Klinik.Resources.UIMessages.Necessity</th>

                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
             toastr.options = {
        "closeButton": true,
        "positionClass": "toast-top-full-width",
        "onclick": null,
        "showDuration": "0",
        "hideDuration": "0",
        "timeOut": "0",
        "showMethod": "fadeIn"
    };
            $('#tbAppointment').dataTable({
                "autoWidth": false,
                "processing": true,
                "serverSide": true,
                "filter": true,
                "orderMulti": false,
                "order": [[5, "desc"]],
                "pageLength": 10,
                "ajax": {
                    "url": "/Appointment/GetAppointmentData",
                    "type": "POST",
                    "datatype": "json"
                },

                "columnDefs":
                    [{
                        "targets": [0],
                        "orderable": false,
                        "visible":false,
                        "data": "Id"
                    },
                    {
                        "targets": [1],
                        "searchable": true,
                        "orderable": true,
                        "data": "EmpName"
                    },
                    {
                        "targets": [2],
                        "searchable": true,
                        "orderable": true,
                        "data": "PoliName"
                    },
                    {
                        "targets": [3],
                        "searchable": true,
                        "orderable": true,
                        "data": "ClinicName"
                    },
                    {
                        "targets": [4],
                        "searchable": true,
                        "orderable": true,
                        "data": "DoctorName"
                    },
                    {
                        "targets": [5],
                        "searchable": false,
                        "orderable": true,
                        "data": "StrAppointmentDate"
                    },
                    {
                        "targets": [6],
                        "searchable": false,
                        "orderable": false,
                        "data": "StrAppointmentTime"
                    },
                    {
                        "targets": [7],
                        "searchable": false,
                        "orderable": false,
                        "data": "RequirementName"
                    },
                    {
                        "targets": [8],
                        "searchable": false,
                        "orderable": false,
                        'render': function (data, type, full, meta) {
                            return'<a href="#" class="btn btn-info" id="btnDelete" value="Remove" onclick=Delete(' + full.Id + ')><span class="glyphicon glyphicon-remove"></span> Remove </a>';
                            @*'<a href="@Url.Action("EditAppointment","Appointment")?appoId='+full.Id+'", class="btn btn-info" id="btnEdit" value="Edit"><span class="glyphicon glyphicon-pencil"></span> Edit </a>'
                                + '|' +*@
                                
                        }
                    }
                    ]

            });
        });

        var Delete = function (ID) {
        var r = confirm("@Klinik.Resources.UIMessages.DeleteConfirmation" + ID + " ) ?");
        if (r == true) {
            DeleteAppointment(ID);
        }
        return false;
    }

    function DeleteAppointment(Id) {
        $.ajax({
            url: '/Appointment/DeleteAppointment?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status=='True' || result.Status=='true' || result.Status==true) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                   
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
    }
    </script>
}