@model Klinik.Entities.Registration.RegistrationModel

@{
    ViewBag.Title = "RegistrationList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/responsive.bootstrap.css" rel="stylesheet" />

@if (ViewBag.IsHasAddPrivilege)
{
    <button id="btnAdd" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;@Klinik.Resources.UIMessages.AddNew</button>
}
<br /><br />
<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
        </div>
        <h5 class="panel-title">@Klinik.Resources.UIMessages.RegistrationList</h5>
    </header>
    <div class="panel-body">
        <div style="width:100%; margin:0 auto">
            <table id="tbRegistration" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Klinik.Resources.UIMessages.ID</th>
                        <th>@Klinik.Resources.UIMessages.PatientName</th>
                        <th>@Klinik.Resources.UIMessages.PoliFrom</th>
                        <th>@Klinik.Resources.UIMessages.PoliTo</th>
                        <th>@Klinik.Resources.UIMessages.DoctorOrParamedic</th>
                        <th>@Klinik.Resources.UIMessages.SortNumber</th>
                        <th>@Klinik.Resources.UIMessages.RegistrationType</th>
                        <th>@Klinik.Resources.UIMessages.Remark</th>
                        <th>@Klinik.Resources.UIMessages.TransactionDate</th>
                        <th>@Klinik.Resources.UIMessages.RegistrationStatus</th>
                        <th>@Klinik.Resources.UIMessages.Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
<script src="~/signalr/hubs"></script>

<script type="text/javascript">
    $(function () {
        // Reference the hub.
        var notifFromHub = $.connection.registrationHub;

        // Start the connection.
        $.connection.hub.start().done(function () {
            //ReloadData();
        });

        // Notify while anyChanges.
        notifFromHub.client.updatedClients = function () {
            ReloadData();
        };
    });

    function ReloadData() {
        location.reload(true);
    }

    $(document).ready(function () {
        $('#btnAdd').click(function (e) {
            window.location.href = "/Registration/CreateOrEditRegistration";
        });

        $('#tbRegistration').dataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "pageLength": 10,
            "ajax": {
                "url": "/Registration/GetRegistrationData",
                "type": "POST",
                "datatype": "json"
            },

            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false,
                },
                {
                    "targets": [1],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [2],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [3],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [4],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [5],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [6],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [7],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [8],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [9],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [10],
                    "searchable": true,
                    "orderable": true
                }
                ],

            "columns": [
                { "data": "Id", "name": "Id", "autoWidth": false },
                {
                    "render": function (data, type, full, meta) {return '<a href="/Registration/CreateOrEditRegistration?id=' + full.Id + '">'+ full.PatientName+'</a>'; }
                },
                { "data": "PoliFromName", "name": "PoliFromName", "autoWidth": true },
                { "data": "PoliToName", "name": "PoliToName", "autoWidth": true },
                { "data": "DoctorStr", "name": "DoctorStr", "autoWidth": true },
                { "data": "SortNumber", "name": "SortNumber", "autoWidth": true },
                { "data": "TypeStr", "name": "TypeStr", "autoWidth": true },
                { "data": "Remark", "name": "Remark", "autoWidth": true },
                { "data": "TransactionDateStr", "name": "TransactionDateStr", "autoWidth": true },
                { "data": "StatusStr", "name": "StatusStr", "autoWidth": true },
                {
                    "render": function (data, type, full, meta) {
                        return "<button class='btn btn-success' onclick='Process(" + full['Id'] + ")' >@Klinik.Resources.UIMessages.Process</button>" +
                            " | <button class='btn btn-warning' onclick='Hold(" + full['Id'] + ")' >@Klinik.Resources.UIMessages.Hold</button>" +
                            " | <button class='btn btn-danger' onclick='Finish(" + full['Id'] + ")' >@Klinik.Resources.UIMessages.Finish</button>";
                    }
                }
            ]
        });
    });

    var _status, _message, _temp;
    var _arrMsg = [];
    toastr.options = {
        "closeButton": true,
        "positionClass": "toast-top-full-width",
        "onclick": null,
        "showDuration": "0",
        "hideDuration": "0",
        "timeOut": "0",
        "showMethod": "fadeIn"
    };

    var Process = function (ID) {
        var r = confirm("@Klinik.Resources.UIMessages.ProcessConfirmation");
        if (r == true) {
            ProcessPatient(ID);
        }
        return false;
    }

    function ProcessPatient(Id) {
        $.ajax({
            url: '/Registration/ProcessRegistration?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
    }

    var Hold = function (ID) {
        var r = confirm("@Klinik.Resources.UIMessages.HoldConfirmation");
        if (r == true) {
            HoldPatient(ID);
        }
        return false;
    }

    function HoldPatient(Id) {
        $.ajax({
            url: '/Registration/HoldRegistration?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
    }

    var Finish = function (ID) {
        var r = confirm("@Klinik.Resources.UIMessages.FinishConfirmation");
        if (r == true) {
            FinishPatient(ID);
        }
        return false;
    }

    function FinishPatient(Id) {
        $.ajax({
            url: '/Registration/FinishRegistration?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
    }
</script>


