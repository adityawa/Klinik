@using Klinik.Common.Paging;
@model Klinik.Entities.Reports.Top10DiseaseReportModel
@{
    ViewBag.Title = "Top10DiseasesReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#first" aria-controls="first" role="tab" data-toggle="tab">Tabular Report</a></li>
        <li role="presentation"><a href="#second" aria-controls="second" role="tab" data-toggle="tab">Chart</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="first">.
                <header class="panel-heading">
                    <h5 class="panel-title">
                        @Klinik.Resources.UIMessages.Top10DiseasesReport
                    </h5>
                </header>
                <div class="panel-body">
                    <table class="table-striped">
                        <thead>
                            <tr>
                                <th align="center">@Klinik.Resources.UIMessages.ICDCode</th>
                                <th align="center">@Klinik.Resources.UIMessages.ICDName</th>
                                <th align="center">@Model.Category</th>
                                <th align="center">@Klinik.Resources.UIMessages.Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DiseaseDataReports)
                            {
                                <tr>
                                    <td width="15%">@item.ICDCode</td>
                                    <td width="45%">@item.ICDName </td>
                                    <td width="25%">@item.Category</td>
                                    <td width="15%">@item.Total</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @*<div class="pager">
                        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalRecord)
                    </div>*@
                </div>
                <div class="panel-footer">
                    <a href="@Url.Action("ExportExcel","Reports", new { Id = Model.ProcessId })" class="btn btn-primary">@Klinik.Resources.UIMessages.ExportToExcel</a>
                </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="second">
            <form action="DownloadChart" method="post">
                @Html.HiddenFor(model => model.Charts)
                <div class="row">
                    @foreach (DotNet.Highcharts.Highcharts chart in Model.Charts)
                    {
                        <div class="col-md-12">
                            @(chart)
                        </div>
                        <div class="col-md-12">
                            <a href="@Url.Action("DownloadChart", "Reports", new { Id = Model.ProcessId })" class="btn btn-primary">@Klinik.Resources.UIMessages.GenerateImage</a>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
