@model Klinik.Entities.Administration.LogonUserModel

@{
    ViewBag.Title = "ViewActiveUser";
}


<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
        </div>
        <h5 class="panel-title">List Active User</h5>
    </header>
    <div class="panel-body">
        <div style="width:100%; margin:0 auto">
            <table id="tbLogging" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Klinik.Resources.UIMessages.ID</th>
                        <th>@Klinik.Resources.UIMessages.IPAddress</th>
                        <th>@Klinik.Resources.UIMessages.Browser</th>
                        <th>@Klinik.Resources.UIMessages.PCName</th>
                        <th>@Klinik.Resources.UIMessages.Username</th>
                        <th>@Klinik.Resources.UIMessages.SessionID</th>
                       <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {
        $('#tbLogging').dataTable({
            "autoWidth": false,
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "order": [[1, "desc"]],
            "pageLength": 10,
            "ajax": {
                "url": "/Administration/GetActiveUserLogon",
                "type": "POST",
                "datatype": "json"
            },

            "columnDefs":
                [{
                    "targets": [0],
                    "orderable": false
                },
                {
                    "targets": [1],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [2],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [3],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [4],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [5],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [6],
                    "searchable": true,
                    "orderable": true
                },
              
                ],

            "columns": [
                { "data": "Id", "name": "Id", "autoWidth": false },
                { "data": "IPAddress", "name": "IPAddress", "autoWidth": true },
                { "data": "Browser", "name": "Browser", "autoWidth": true },
                { "data": "PCName", "name": "PCName", "autoWidth": true },
                { "data": "UserName", "name": "UserName", "autoWidth": true },
                { "data": "SessionID", "name": "SessionID", "autoWidth": true },
                {
                    "render": function (data, type, full, meta) { return "<button class='btn btn-info' onclick='DisableSession(" + full['Id'] + ")' >Disable</button>"; }
                }
               
            ]
        });
    });

   var DisableSession = function (ID) {
        var r = confirm("@Klinik.Resources.UIMessages.DisableConfirmation");
        if (r == true) {
            Disable(ID);
        }
        return false;
    }

    function Disable(Id) {
        $.ajax({
            url: '/Administration/DisableUserLogin?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
    }
    </script>
}

