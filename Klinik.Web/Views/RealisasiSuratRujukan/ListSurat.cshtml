@model Klinik.Entities.RealisasiSuratRujukanEntities.RealisasiSuratRujukanModel


    @{
       
        Layout = "~/Views/Shared/_Layout.cshtml";
    }



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List Surat Rujukan</title>
</head>
<body>
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <a href="#" class="fa fa-caret-down"></a>
            </div>
            <h5 class="panel-title">
                @Klinik.Resources.UIMessages.ListSuratRujukan
                <button id="btnAdd" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;@Klinik.Resources.UIMessages.AddNew</button>
            </h5>
        </header>
        <div class="panel-body">
            <div style="width:100%; margin:0 auto">
                <table id="tbListSurat" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Klinik.Resources.UIMessages.ID</th>
                            <th>@Klinik.Resources.UIMessages.NoSurat</th>
                            <th>@Klinik.Resources.UIMessages.FormMedical</th>
                            <th>@Klinik.Resources.UIMessages.Patient</th>
                            <th>@Klinik.Resources.UIMessages.PatientName</th>
                            <th>@Klinik.Resources.UIMessages.RS_Rujukan</th>
                            <th>@Klinik.Resources.UIMessages.DoctorName</th>
                            <th></th>

                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {


        $('#tbListSurat').dataTable({
            "autoWidth": false,
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "pageLength": 10,
            "ajax": {
                "url": "/RealisasiSuratRujukan/GetListSuratRujukan",
                "type": "POST",
                "datatype": "json"
            },

            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false,

                },
                {
                    "targets": [1],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [2],
                     "visible": false,
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [3],
                     "visible": false,
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [4],
                    "searchable": true,
                    "orderable": true

                },
                {
                    "targets": [5],
                    "searchable": true,
                    "orderable": false
                },
                {
                    "targets": [6],
                    "searchable": false,
                    "orderable": false
                },
              {
                    "targets": [7],
                    "searchable": false,
                    "orderable": false
                },
                ],

            "columns": [
                 { "data": "Id", "name": "Id", "autoWidth": false },
                { "data": "NoSurat", "name": "NoSurat", "autoWidth": false },
                { "data": "FormMedicalID", "name": "FormMedicalID", "autoWidth": true },
                { "data": "PatientID", "name": "PatientID", "autoWidth": true },
                { "data": "PatientName", "name": "PatientName", "autoWidth": true },
                { "data": "RSRujukan", "name": "RSRujukan", "autoWidth": true },
                { "data": "DoctorName", "name": "DoctorName", "autoWidth": true },

                {
                    "render": function (data, type, full, meta) { return '<a class="btn btn-info" title="Claim" href="/PoliClaim/FormExamine?idPatient=' + full.PatientID + '&noSurat='+full.NoSurat+'"><i class="fa fa-hand-rock-o" aria-hidden="true"></i></a>  ' ; }
                }


            ]
        });
    });
    var _status, _message, _temp;
    var _arrMsg = [];
    toastr.options = {
        "closeButton": true,
        "positionClass": "toast-top-full-width",
        "onclick": null,
        "showDuration": "0",
        "hideDuration": "0",
        "timeOut": "0",
        "showMethod": "fadeIn"
    };

    var Delete = function (ID) {
        var r = confirm("@Klinik.Resources.UIMessages.DeleteConfirmation" + ID + " ) ?");
        if (r == true) {
            DeleteClinic(ID);
        }
        return false;
    }

    function DeleteClinic(Id) {
        $.ajax({
            url: '/MasterData/DeleteMasterClinic?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
    }
    </script>
}