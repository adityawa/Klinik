@model Klinik.Data.DataRepository.FormMedical
@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel">
    <div class="panel-body">
        <div class="col-lg-6 bg-info">
            <h3>Klinik @ViewBag.ClinicName </h3>
            <br />
            <p>Nama Pasien : @ViewBag.PatienName</p>
        </div>
        <div class="col-lg-6 bg-info">
            <h3>Invoice</h3>
            <br />
            <p>@DateTime.Now.ToString("dddd, dd MMMM yyyy")</p>
        </div>

        <div class="col-lg-12" style="padding-top: 10px;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (IEnumerable<Klinik.Entities.Cashier.CashierModel>)ViewBag.Detail)
                    {
                        <tr>
                            <td>@item.ItemName</td>
                            <td>RP. @item.Price</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td></td>
                        <td>Rp. @ViewBag.sum</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="col-lg-12" style="padding-top: 10px;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Total Price</th>
                        <th>Disount %</th>
                        <th>Discount Amount</th>
                        <th>Remark</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.TotalPrice</td>
                        <td>@Model.DiscountPercent</td>
                        <td>@Model.DiscountAmount</td>
                        <td>@Model.Remark</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-4" style="padding-top: 20px; float:right !important">
            <table class="table">
                <tr>
                    <th>Total Price</th>
                    <td>Rp. @ViewBag.Total</td>
                </tr>
            </table>
        </div>
    </div>
</section>
<section>
    <div class="panel-body">
        <div class="col-lg-12">
            <button class="btn btn-primary" id="print">Print Invoice</button>
        </div>
    </div>
</section>
<script type="text/javascript">
    var check = $('#print');

    check.on('click', function () {
        html2canvas($('.panel')[0], {
            onrendered: function (canvas) {
                var data = canvas.toDataURL();
                var docDefinition = {

                    pageOrientation: 'landscape',

                    content: [{
                        image: data,
                        width: 750
                    }]
                };
                pdfMake.createPdf(docDefinition).download("Table.pdf");
            }
        });
    });
</script>
@section pdfcode{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
}

