@model Klinik.Entities.MappingMaster.ClinicPoliModel

@{
    ViewBag.Title = "ClinicPoliList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
        </div>
        <h5 class="panel-title">
            @Klinik.Resources.UIMessages.PoliList
            <button id="btnAdd" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;@Klinik.Resources.UIMessages.AddNew</button>
        </h5>
    </header>
    <div class="panel-body">
        <div style="width:100%; margin:0 auto">
            <table id="tbPoli" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Klinik.Resources.UIMessages.ID</th>
                        <th>@Klinik.Resources.UIMessages.Code</th>
                        <th>@Klinik.Resources.UIMessages.Name</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {
        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-top-full-width",
            "onclick": null,
            "showDuration": "0",
            "hideDuration": "0",
            "timeOut": "0",
            "showMethod": "fadeIn"
        };

        var _idRole = getUrlVars()["roleid"];
        var rows_selected = [];

        var array = @Html.Raw(Json.Encode(Model.ListPoliId));
        if (array != null && array.length > 0) {
            for (var i = 0; i < array.length; i++) {
                rows_selected.push(array[i]);
            }
        }

        var table = $('#tbRolePriv').DataTable({
            "autoWidth": false,
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "pageLength": 10,
            'ajax': {
                "url": "/MappingMaster/GetRolePrivilegeData?roleid=" + _idRole,
                "type": "POST",
                "datatype": "json"
            },
            'columnDefs': [
                {
                    'targets': 0,
                    'searchable': false,
                    'orderable': false,
                    'width': '1%',
                    'className': 'dt-body-center',
                    'render': function (data, type, full, meta) {
                        return '<input type="checkbox">';
                    }
                },
                {
                    "targets": 1,
                    "searchable": true,
                    "orderable": true,
                    "visible": false,
                    "data": "PrivilegeID"
                },
                {
                    "targets": 2,
                    "searchable": false,
                    "orderable": false,
                    "data": "PrivileveName"
                },
                {
                    "targets": 3,
                    "searchable": false,
                    "orderable": false,
                    "data": "PrivilegeDesc"
                }],


            'order': [[1, 'desc']],
            'rowCallback': function (row, data, dataIndex) {
                // Get row ID
                var rowId = data.PrivilegeID;

                //var cek = $.inArray(rowId, rows_selected);
                //var cek1 = data.Id;

                if ($.inArray(rowId, rows_selected) != -1) {
                    $(row).find('input[type="checkbox"]').prop('checked', true);
                    $(row).addClass('selected');
                }
            }
        });
    });
    </script>
}

