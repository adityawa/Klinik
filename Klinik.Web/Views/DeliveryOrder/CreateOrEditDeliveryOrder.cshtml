@model Klinik.Entities.DeliveryOrder.DeliveryOrderModel
@{
    ViewBag.Title = "CreateOrEditDeliveryOrder";
}
@section Styles{
    <link href="~/Content/Login/vendor/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Content/Custom/Custom.css" rel="stylesheet" />
}
<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
        </div>
        <h5 class="panel-title">Form @ViewBag.ActionType Delivery Order</h5>
    </header>
    <div class="panel-body">
        <form class="form-horizontal">
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                <label class="col-md-2 control-label" for="inputDefault">@Klinik.Resources.UIMessages.NO_DO</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.donumber, new { @class = "form-control", @id = "donumber" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" for="inputDefault">PO ID</label>
                <div class="col-md-4">
                    <select class="form-control" id="ponumber" name="poid"></select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" for="inputDefault">@Klinik.Resources.UIMessages.CreatedDate</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.dodate, new { @class = "form-control", @id = "dodate" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" for="inputDefault">@Klinik.Resources.UIMessages.TujuanDO</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.dodest, new { @class = "form-control", @id = "dodest" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" for="inputDefault">@Klinik.Resources.UIMessages.ApprovedBY</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.approve_by, new { @class = "form-control", @id = "approve_by" })
                </div>
            </div>
            <br />
        </form>
    </div>
    <div class="panel-body">
        <div class="scrollTable">
            <table id="tblDeliveryOrder" class="table color-table success-table">
                <caption class="headertable">@Klinik.Resources.UIMessages.DeliveryOrderDetailList</caption>
                <thead>
                    <tr>
                        <th hidden>Id Obat</th>
                        <th>Nama Obat</th>
                        <th>Nama Gudang</th>
                        <th>Nama Klinik</th>
                        <th>Nama Brang PO</th>
                        <th>Qty PO</th>
                        <th>Qty PO Final</th>
                        <th>Qty DO</th>
                        <th>Remark DO</th>
                        <th>Qty Adj</th>
                        <th>Remark Adj</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model.deliveryOrderDetailModels)
                        {
                            <tr>
                                <td hidden>@item.Id</td>
                                <td hidden>@item.ProductId</td>
                                <td hidden>@item.GudangId</td>
                                <td hidden>@item.ClinicId</td>
                                <td hidden>@item.ProductId_Po</td>
                                <td><select disabled="disabled"><option>@item.namabarang</option></select></td>
                                <td><select disabled="disabled"><option>@item.namagudang</option></select></td>
                                <td><select disabled="disabled"><option>@item.namaklinik</option></select></td>
                                <td><select disabled="disabled"><option>@item.namabarang_po</option></select></td>
                                <td><input type="text" class="form-control" value="@item.qty_po" disabled="disabled" /></td>
                                <td><input type="text" class="form-control" value="@item.qty_po_final" disabled="disabled" /></td>
                                <td><input type="text" class="form-control" value="@item.qty_do" disabled="disabled" /></td>
                                <td><input type="text" class="form-control" value="@item.remark_do" disabled="disabled" /></td>
                                <td><input type="text" class="form-control" value="@item.qty_adj" disabled="disabled" /></td>
                                <td><input type="text" class="form-control" value="@item.remark_adj" disabled="disabled" /></td>
                                <td hidden></td>
                                <td>
                                    <button class="edit-deliveryorderdetail btn btn-success btn-sm">Edit</button>
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <br />
        <form id="deliveryorderdetail">
            <div class="form-group">
                <input type="text" hidden id="DeliveryOrderDetailId" />
                <input type="text" hidden id="ProductId" />
                <input type="text" hidden id="GudangId" />
                <input type="text" hidden id="ClinicId" />
                <input type="text" hidden id="ProductId_Po" />
                <div class="row">
                    <div class="col-md-3">
                        <select id="namabarang" class="form-control"></select>
                    </div>
                    <div class="col-md-3">
                        <select id="namagudang" class="form-control"></select>
                    </div>
                    <div class="col-md-3">
                        <select id="namaklinik" class="form-control"></select>
                    </div>
                    <div class="col-md-3">
                        <select id="namabarang_po" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="Qty PO" id="qty_po" value="" />
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="QTY PO Final" id="qty_po_final" value="" />
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="Qty DO" id="qty_do" value="" />
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="Qty Adj" id="qty_adj" value="" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <textarea type="text" class="namaobat form-control" placeholder="Remark DO" id="remark_do"></textarea>
                <br />
                <textarea type="text" class="namaobat form-control" placeholder="Remark Adj" id="remark_adj"></textarea>
            </div>
            <footer class="col-md-12 text-right">
                <input type="button" id="btnAdd" class="btn btn-success float-right" value="Add" />
            </footer>
        </form>
        <footer class="panel-footer">
            <button type="submit" class="btn btn-primary saveorderdetail" data-parameterone="_deliveryorder" data-parametertwo="deliveryOrderDetailpusatModels" data-url="/DeliveryOrder/CreateOrEditDeliveryOrder">@Klinik.Resources.UIMessages.Save</button>
            <button type="reset" id="btnreset" class="btn btn-default">@Klinik.Resources.UIMessages.Back</button>
        </footer>
    </div>
</section>

@section Scripts {
    <script src="~/js/Custom.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dodate').datepicker({
                autoclose: true
            });
            $('#btnreset').click(function (e) {
                window.location.href = "/DeliveryOrder/DeliveryOrderList";
            });

            toastr.options = {
                "closeButton": false,
                "positionClass": "toast-top-full-width",
                "onclick": null,
                "showDuration": "0",
                "hideDuration": "0",
                "timeOut": "2000",
                "showMethod": "fadeIn"
            };

            var _temp="@ViewBag.Response";
            var _arrMsg = _temp.split(";");

            if (_arrMsg.length > 1) {
                if (_arrMsg[0] == "True") {
                    toastr.success(_arrMsg[1]);
                }
                else {
                    toastr.options.closeButton = true;
                    toastr.options.timeOut = 0;
                    toastr.error(_arrMsg[1]);
                }
            }
        });

    </script>
    <script type="text/javascript">

        function Remove(button) {
            //Determine the reference of the Row using the Button.
            var row = $(button).closest("TR");
            var name = $("TD", row).eq(0).html();
            if (confirm("Do you want to delete: " + name)) {
                //Get the reference of the Table.
                var table = $("#tblDeliveryOrder")[0];

                //Delete the Table row using it's Index.
                table.deleteRow(row[0].rowIndex);
            }
        };
    </script>
}
