@model Klinik.Entities.MasterData.PrivilegeModel

@{
    ViewBag.Title = "PrivilegeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/responsive.bootstrap.css" rel="stylesheet" />

<button id="btnAdd" class="btn btn-primary"><i class="fa fa-plus"></i> Tambah Data</button>

<br /><br />
<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
        </div>
        <h5 class="panel-title">List Privilege</h5>
    </header>
    <div class="panel-body">
        <div style="width:100%; margin:0 auto">
            <table id="tbPrivilege" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Navigation</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function () {

        $('#btnAdd').click(function (e) {
            window.location.href = "/MasterData/CreateOrEditPrivilege";
        });

        $('#tbPrivilege').dataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "pageLength": 10,
            "ajax": {
                "url": "/MasterData/GetPrivilegeData",
                "type": "POST",
                "datatype": "json"
            },

            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false,

                },
                {
                    "targets": [1],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [2],
                    "searchable": true,
                    "orderable": false
                },
                {
                    "targets": [3],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [4],
                    "searchable": false,
                    "orderable": false
                }
                ],

            "columns": [
                { "data": "Id", "name": "Id", "autoWidth": false },
                { "data": "Privilige_Name", "name": "Privilige_Name", "autoWidth": true },
                { "data": "Privilege_Desc", "name": "Privilege_Desc", "autoWidth": true },
                { "data": "MenuDesc", "name": "MenuDesc", "autoWidth": true },
                {
                    "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/MasterData/CreateOrEditPrivilege?id=' + full.Id + '">Edit</a>  ' + " | <button class='btn btn-danger' onclick='Delete(" + full['Id'] + ")' >Delete</button>"; }
                }
            ]
        });
    });
    var _status, _message, _temp;
    var _arrMsg = [];
    toastr.options = {
        "closeButton": true,
        "positionClass": "toast-top-full-width",
        "onclick": null,
        "showDuration": "0",
        "hideDuration": "0",
        "timeOut": "0",
        "showMethod": "fadeIn"
    };


    var Delete = function (ID) {
        var txt;
        var r = confirm("Apakah anda yakin akan menghapus Privilege dengan code " + ID);
        if (r == true) {
            DeletePrivilege(ID);
        }
        return false;
    }

    function DeletePrivilege(Id) {
        $.ajax({
            url: '/MasterData/DeleteMasterPrivilege?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status == "SUCCESS") {

                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
    }
</script>