@model Klinik.Entities.MasterData.MedicineModel

@{
    ViewBag.Title = "MedicineList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
        </div>
        
        <table>
            <tr>
                <th>
                    <h5 class="panel-title">
                        @Klinik.Resources.UIMessages.MedicineList

                    </h5>
                </th>
                <th>
                    <h4>
                    <a href="/MasterData/CreateOrEditMedicine" id="btnAdd"><i class="fa fa-plus-square"></i></a>

                    </h4>
                </th>
                <th>
                    @using (Html.BeginForm("ImportData", "ExportImport", FormMethod.Post))
                    {
                        <input type="submit" value="Export" class="btn btn-primary" />
                    }

                    @*<form action="" method="post">

                        <a href="" type="submit"><i class="fa fa-download"></i></a>

                    </form>*@
                </th>
                <th>
                    <form action="" method="post">

                        <a href="" type="submit"><i class="fa fa-upload"></i></a>

                    </form>
                </th>
            </tr>
        </table>
    </header>
    <div class="panel-body">
        <div style="width:100%; margin:0 auto">
            <table id="tbMedicine" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Klinik.Resources.UIMessages.ID</th>
                        <th style="width:45px"></th>
                        <th>@Klinik.Resources.UIMessages.Name</th>
                        <th>@Klinik.Resources.UIMessages.CreatedBy</th>
                        <th>@Klinik.Resources.UIMessages.CreatedDate2</th>
                        <th>@Klinik.Resources.UIMessages.ModifiedBy</th>
                        <th>@Klinik.Resources.UIMessages.ModifiedDate</th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {

        $('#btnAdd').click(function (e) {
            window.location.href = "/MasterData/CreateOrEditMedicine";
        });

        $('#tbMedicine').dataTable({
            "autoWidth": false,
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "pageLength": 10,
            "ajax": {
                "url": "/MasterData/GetMedicineData",
                "type": "POST",
                "datatype": "json"
            },

            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false,
                },
                {
                    "targets": [1],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [2],
                    "searchable": true,
                    "orderable": true
                    },
                {
                    "targets": [3],
                    "searchable": true,
                    "orderable": true
                    },
                {
                    "targets": [4],
                    "searchable": true,
                    "orderable": true
                    },
                {
                    "targets": [5],
                    "searchable": true,
                    "orderable": true
                    },
                {
                    "targets": [6],
                    "searchable": true,
                    "orderable": true
                    }
                ],

            "columns": [
                { "data": "Id", "name": "Id", "autoWidth": false },
                {
                    "render": function (data, type, full, meta) {return '<a href="/MasterData/CreateOrEditMedicine?id=' + full.Id + '"><i class="fa fa-pencil"></i></a>  ' + ' <a href="#" onclick="Delete(' + full['Id'] + ')"><i class="fa fa-trash"></i></a>  '}

                },
                { "data": "Name", "name": "Name", "autoWidth": true },
                { "data": "CreatedBy", "name": "CreatedBy", "autoWidth": true },
                { "data": "CreatedDateStr", "name": "CreatedDateStr", "autoWidth": true },
                { "data": "ModifiedBy", "name": "ModifiedBy", "autoWidth": true },
                { "data": "ModifiedDateStr", "name": "ModifiedDateStr", "autoWidth": true }
                
                

            ]
        });
    });
    var _status, _message, _temp;
    var _arrMsg = [];
    toastr.options = {
        "closeButton": true,
        "positionClass": "toast-top-full-width",
        "onclick": null,
        "showDuration": "0",
        "hideDuration": "0",
        "timeOut": "0",
        "showMethod": "fadeIn"
    };

    var Delete = function (ID) {
        var r = confirm("@Klinik.Resources.UIMessages.DeleteConfirmation" + ID + " ) ?");
        if (r == true) {
            DeleteMedicine(ID);
        }
        return false;
    }

    function DeleteMedicine(Id) {
        $.ajax({
            url: '/MasterData/DeleteMasterMedicine?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
    }
    </script>
}