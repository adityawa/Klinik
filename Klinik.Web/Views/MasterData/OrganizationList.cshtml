@model Klinik.Web.Models.MasterData.OrganizationModel

    @{
        ViewBag.Title = "OrganizationList";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/responsive.bootstrap.css" rel="stylesheet" />

    <h2>Organization List</h2>

    <div class="container">
        <button id="btnAdd" class="btn btn-primary"><i class="fa fa-plus"></i> Tambah Data</button>
        <br /><br />
        <div class="row">
            <div style="width:100%; margin:0 auto;">
                <table id="tbOrganization" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Organization Code</th>
                            <th>Organization Name</th>
                            <th>Klinik</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {

            $('#btnAdd').click(function (e) {
                window.location.href = "/MasterData/CreateOrEditOrganization";
            });

            $('#tbOrganization').dataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "orderMulti": false,
                "pageLength": 10,
                "ajax": {
                    "url": "/MasterData/GetOrganizationData",
                    "type": "POST",
                    "datatype": "json"
                },

                "columnDefs":
                    [{
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    },
                    {
                        "targets": [1],
                        "searchable": true,
                        "orderable": true
                    },
                    {
                        "targets": [2],
                        "searchable": true,
                        "orderable": true
                    },
                    {
                        "targets": [3],
                        "searchable": true,
                        "orderable": false
                    }],

                "columns": [
                    { "data": "Id", "name": "Id", "autoWidth": false },
                    { "data": "OrgCode", "name": "OrgCode", "autoWidth": true },
                    { "data": "OrgName", "name": "OrgName", "autoWidth": true },
                    { "data": "Klinik", "name": "Klinik", "autoWidth": true },

                    {
                        "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/Demo/Edit/' + full.Id + '">Edit</a>'; }
                    },
                    {
                        data: null, render: function (data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.Id + "'); >Delete</a>";
                        }
                    }

                ]
            });

        });
    </script>
