@model Klinik.Entities.MasterData.ProductCategoryModel

@{
    ViewBag.Title = "ProductCategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
        </div>
        <table>
            <tr>
                <td>
                    <h5 class="panel-title">
                        @Klinik.Resources.UIMessages.ProductCategoryList
                        <button id="btnAdd" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;@Klinik.Resources.UIMessages.AddNew</button>
                    </h5>

                </td>
                <td style="padding-left:200px">
                    @using (Html.BeginForm("ExportProductCategory", "ExportImport", FormMethod.Post))
                    {
                        <input type="submit" value="Export" class="btn btn-primary" />
                    }

                </td>
                <td style="padding-left:10px">
                    @using (Html.BeginForm("UploadProductCategory", "ExportImport", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
                    {
                        <table>
                            <tr>
                                <td class="child">
                                    <input type="file" id="FileUpload" name="FileUpload" class="" />
                                </td>
                                <td class="child">
                                    <input type="submit" value="Import" id="btnSubmit" class="btn btn-primary" />

                                </td>
                            </tr>
                        </table>
                    }

                </td>
            </tr>

        </table>
        
    </header>
    <div class="panel-body">
        <div style="width:100%; margin:0 auto">
            <table id="tbProductCategory" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Klinik.Resources.UIMessages.ID</th>
                        <th>@Klinik.Resources.UIMessages.Name</th>
                        <th>@Klinik.Resources.UIMessages.Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {

        $('#btnAdd').click(function (e) {
            window.location.href = "/MasterData/CreateOrEditProductCategory";
        });

        $('#tbProductCategory').dataTable({
            "autoWidth": false,
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "pageLength": 10,
            "ajax": {
                "url": "/MasterData/GetProductCategoryData",
                "type": "POST",
                "datatype": "json"
            },

            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false,
                },
                {
                    "targets": [1],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [2],
                    "searchable": true,
                    "orderable": true
                }
                ],

            "columns": [
                { "data": "Id", "name": "Id", "autoWidth": false },
                { "data": "Name", "name": "Name", "autoWidth": true },
                {
                    "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/MasterData/CreateOrEditProductCategory?id=' + full.Id + '">@Klinik.Resources.UIMessages.Edit</a>  ' + " | <button class='btn btn-danger' onclick='Delete(" + full['Id'] + ")' >@Klinik.Resources.UIMessages.Delete</button>" }
                }

            ]
        });
    });
    var _status, _message, _temp;
    var _arrMsg = [];
    toastr.options = {
        "closeButton": true,
        "positionClass": "toast-top-full-width",
        "onclick": null,
        "showDuration": "0",
        "hideDuration": "0",
        "timeOut": "0",
        "showMethod": "fadeIn"
    };

    var Delete = function (ID) {
        var r = confirm("@Klinik.Resources.UIMessages.DeleteConfirmation" + ID + " ) ?");
        if (r == true) {
            DeleteProductCategory(ID);
        }
        return false;
    }

    function DeleteProductCategory(Id) {
        $.ajax({
            url: '/MasterData/DeleteMasterProductCategory?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
    }
    </script>
}