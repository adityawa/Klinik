@model Klinik.Entities.PurchaseOrderPusat.PurchaseOrderPusatModel
@{
    ViewBag.Title = "PurchaseOrderPusatList";
}

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
        </div>
        <h5 class="panel-title">
            @Klinik.Resources.UIMessages.PurchaseOrderPusatList
        </h5>
    </header>
    <div class="panel-body">
        <div style="width:100%; margin:0 auto">
            <table id="tbPurchaseOrderPusat" class="table table-striped table-bordered dt-responsive" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Klinik.Resources.UIMessages.IDPO</th>
                        <th>@Klinik.Resources.UIMessages.PoNumber</th>
                        <th>Tanggal Po</th>
                        <th>@Klinik.Resources.UIMessages.RequestBy</th>
                        <th>@Klinik.Resources.UIMessages.ApprovedBY</th>
                        <th>@Klinik.Resources.UIMessages.Approve</th>
                        <th>@Klinik.Resources.UIMessages.CreatedBy</th>
                        <th>@Klinik.Resources.UIMessages.Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {

        $('#btnAdd').click(function (e) {
            window.location.href = "/GudangPusat/CreateOrEditPurchaseOrderPusat";
        });

        $('#tbPurchaseOrderPusat').dataTable({
            "autoWidth": false,
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "pageLength": 10,
            "ajax": {
                "url": "/GudangPusat/GetPurchaseOrderData",
                "type": "POST",
                "datatype": "json"
            },

            "columnDefs":
                [{
                    "targets": [0],
                    "visible": true,
                    "searchable": false,
                },
                {
                    "targets": [1],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [2],
                    "searchable": true,
                    "orderable": false
                },
                {
                    "targets": [3],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [4],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [5],
                    "searchable": true,
                    "orderable": false
                },
                {
                    "targets": [6],
                    "searchable": true,
                    "orderable": false
                },
                {
                    "targets": [7],
                    "searchable": true,
                    "orderable": false
                }
                ],

            "columns": [
                { "data": "Id", "Id": "Id", "autoWidth": false },
                { "data": "ponumber", "ponumber": "ponumber", "autoWidth": true },
                { "data": "createformat", "createformat": "createformat", "autoWidth": true },
                { "data": "request_by", "request_by": "request_by", "autoWidth": false },
                { "data": "approve_by", "approve_by": "approve_by", "autoWidth": true },
                { "data": "approve", "approve": "approve", "autoWidth": true },
                { "data": "CreatedBy", "CreatedBy": "CreatedBy", "autoWidth": true },
                {
                    "render": function (data, type, full, meta)
                    {
                         var type = full['approve'] == null ? 'Approve' : 'Print';
                        var button = full['approve'] == null ? "<button class='btn btn-success btn-xs' onclick='" + type + "(" + full['Id'] + ")' >@Klinik.Resources.UIMessages.Approve</button>" : '<a class="btn btn-success btn-xs" href="/PurchaseOrderPusat/PrintPurchaseOrderPusat?id=' + full.Id + '">' + type + '</a>';
                        return '<a class="btn btn-info btn-xs" href="/GudangPusat/CreateOrEditPurchaseOrder?id=' + full.Id + '">@Klinik.Resources.UIMessages.Edit</a>  ' + " | <button class='btn btn-danger btn-xs' onclick='Delete(" + full['Id'] + ")' >@Klinik.Resources.UIMessages.Delete</button>";
                    }
                }

            ]
        });
    });
    var _status, _message, _temp;
    var _arrMsg = [];
    toastr.options = {
        "closeButton": true,
        "positionClass": "toast-top-full-width",
        "onclick": null,
        "showDuration": "0",
        "hideDuration": "0",
        "timeOut": "0",
        "showMethod": "fadeIn"
    };

    var Delete = function (ID) {
        var r = confirm("@Klinik.Resources.UIMessages.DeleteConfirmation" + ID + " ) ?");
        if (r == true) {
            DeleteDO(ID);
        }
        return false;
        }

        var Approve = function (ID) {
            var r = confirm("@Klinik.Resources.UIMessages.ApproveConfirmation" + ID + " ) ?");
            if (r == true) {
            ApproveDO(ID);
        }
        return false;
        }

        var Print = function (ID) {
            var r = confirm("@Klinik.Resources.UIMessages.ApproveConfirmation" + ID + " ) ?");
            if (r == true) {
            PrintDO(ID);
        }
        return false;
        }

        function DeleteDO(Id) {
        $.ajax({
            url: 'PurchaseOrderPusat/DeletePurchaseOrderPusat?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
        }

        function ApproveDO(Id) {
        $.ajax({
            url: '/PurchaseOrderPusat/ApprovePurchaseOrderPusat?id=' + Id,
            type: 'POST',
            success: function (result) {
                if (result.Status) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
        }

        function PrintDO(Id) {
        $.ajax({
            url: '/PurchaseOrderPusat/PrintPurchaseOrderPusat?id=' + Id,
            type: 'GET',
            success: function (result) {
                if (result.Status) {
                    toastr.options.closeButton = false;
                    toastr.options.timeOut = 2000;
                    location.reload();
                    toastr.success(result.Message);
                }
                else {
                    toastr.error(result.Message);
                }
            }
        });
        }
    </script>
}


